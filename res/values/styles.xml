<?xml version="1.0" encoding="utf-8"?>
<!-- Sets the text styles -->
<resources>
	<style name="obramowanie">
		<item name="android:background">@drawable/obramowanie</item>
		<item name="android:padding">5dip</item>
	</style>
	<style name="niebieski_przycisk">
		<item name="android:background">@drawable/blue_button</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name ="android:minWidth">90dip</item>
	</style>
	<style name="zielony_przycisk">
		<item name="android:background">@drawable/green_button</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name ="android:minWidth">90dip</item>
	</style>
	<style name="purpurowy_przycisk">
		<item name="android:background">@drawable/purple_button</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name ="android:minWidth">90dip</item>
	</style>

	<style name="czerwony_przycisk">
		<item name="android:background">@drawable/red_button</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name ="android:minWidth">90dip</item>
	</style>

	<style name="zolty_przycisk">
		<item name="android:background">@drawable/yellow_button</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
		<item name ="android:minWidth">90dip</item>
	</style>
	
	<style name="opis">
		<item name="android:background">@drawable/radient_tytul</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginLeft">5dip</item>
		<item name="android:layout_marginRight">5dip</item>
		<item name="android:layout_marginTop">5dip</item>
	</style>
	<style name="opis_normalny">
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#FFFFFF</item>
	</style>

	<style name="opis_login">
		<item name="android:background">@drawable/radient_tytul</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="opis_dialog">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#000000</item>
	</style>
	
</resources>