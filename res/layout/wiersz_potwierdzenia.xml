                <TextView android:id="@+id/operacja" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:shadowDx="0" android:shadowDy="0" android:shadowRadius="5" android:layout_weight="1" android:layout_marginRight="5dip" android:textColor="#FFFFFF"></TextView>
