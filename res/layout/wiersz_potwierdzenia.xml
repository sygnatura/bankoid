<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:padding="5dip" android:background="@drawable/obramowanie" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginBottom="10dip" android:layout_marginTop="10dip" android:orientation="horizontal" android:layout_height="wrap_content">
        <TextView style="@style/opis_normalny" android:id="@+id/numer_operacji" android:layout_width="wrap_content" android:layout_marginRight="5dip" android:layout_height="fill_parent" android:gravity="center_vertical"></TextView>
