            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/opis_operacji" style="@style/opis_normalny"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>